<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_scrollView"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="laktionov.filmsraiting.fragment.MovieDetailsFragment">

        <LinearLayout
            android:id="@+id/poster_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_film_posterPath"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_film_originalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="original title"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tv_film_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tv_film_releaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="release date"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_film_runtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="runtime"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_film_voteAverage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vote average"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <RatingBar
            android:id="@+id/rb_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster_title"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:focusable="false" />

        <LinearLayout
            android:id="@+id/another_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster_title"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget:"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="budget"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revenue:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_revenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="revenue"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Homepage:"
                android:textSize="18sp"

                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="homepage"
                android:textColorLink="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original language:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_originalLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="original language"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popularity:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="popularity"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tagline:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_tagLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tag line"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vote count:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_voteCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vote count"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/tv_film_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="overview"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video:"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <RelativeLayout
                android:id="@+id/film_youtube_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.55" >

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
